abstract class Form_Validate_Abstract {
	/**
	 * Errors
	 *
	 * @array
	 */
	protected $errors = array();
        /**
         * Default errors message
         *
         * @var string
         */
        protected $message;
        /**
         * Element
         *
         * @var Form_Element_Abstract
         */
        public $element;
        /**
	 * Validate
	 *
	 * @object	$element
	 */
	 abstract function validate($element);
	 
	 /**
	  * Add error
	  *
	  * @string	$error
	  * @return
	  */
	 public function error($error){
 		 if(!in_array($error,$this->errors)){
			array_push($this->errors,$error);
		 }
		 return FALSE;
	 } 
	 
	 /**
	  * Get errors
	  *
	  * @return	array
	  */
	 public function getErrors(){
		 return $this->errors;
	 } 
} 