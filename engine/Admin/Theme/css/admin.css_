
body
{
	margin:0;
	padding:0;
	color: #222;
/*	background: #424853 url('../img/body_bg.jpg');*/
        background: url('../img/background.png') repeat-x top left;
        font-family: verdana, arial, sans-serif;
}

/* HEADER ===================================================== */


#header
{
	height: 165px; /*Height of the header*/
	position:relative;
}

#header_logo
{
	position:absolute;
	margin-top:30px;
	margin-left:14px;
}

#header h2
{
	position:absolute;
	margin-top:65px;
	padding-left:300px;  /* not "margin-left" or just "left" - to fix IE behaviour */
	font-family: georgia, serif;
	font-size: 19px;
	font-style: italic;
	color: #fff;
	font-weight:normal;
}

#header_auth
{
	position: absolute;
	right:12px;
	margin-top:23px;
	font-family: tahoma, sans-serif;
	font-size: 11px;
	color: #ddd
}
#header_auth a
{
	color: #fff;
}





/* SIDEBAR ==================================================== */

#sidebar
{
	float: left;
	width: 190px; /*Width of left column*/
	margin-left: -100%;
	padding-top:17px;
}


/* SIDEBAR VERTICAL MENU ------------------------------------- */

#sidebar_menu ul
{
	margin: 0;
	padding: 0;
	list-style-type: none;
	font: 14px Tahoma;
	width: 196px; /* Main Menu Item widths */
	border-top: 1px solid #828288;
	-webkit-box-shadow: -5px -3px 7px #333;
	-moz-box-shadow: -5px -3px 7px #333;
	box-shadow: -5px -3px 7px #333;
}

#sidebar_menu ul li
{
	position: relative;
	margin-left:2px;

}

#sidebar_menu ul li a img
{
	position:absolute;
	top:7px;
	left: 8px;
	-moz-opacity:.85;
	filter:alpha(opacity=85);
	opacity:.85;
}
#sidebar_menu ul li a.active img, #sidebar_menu ul li a:hover img, #sidebar_menu ul li a:active img
{
	-moz-opacity:1;
	filter:alpha(opacity=100);
	opacity:1;
}

/* Top level menu links style */
#sidebar_menu ul li a
{
	display: block;
	overflow: auto; /*force hasLayout in IE7 */
	color: #e4e8ed;
	text-decoration: none;
	padding: 6px 0 7px 31px;
	overflow:hidden;
}

#sidebar_menu ul li a:link, #sidebar_menu ul li a:visited
{
	background-color: #282b32; /*background of tabs (default state)*/
	background-image: url('../img/menu_item.png');
	background-position: bottom;
}

#sidebar_menu ul li a:active, #sidebar_menu ul li a.active, #sidebar_menu ul li a:hover
{
	background-color: #0d8dfe;
	background-position: top;
	text-shadow: 1px 1px 0px #0a71c3;
}

#sidebar_menu ul li a.submenu:hover, #sidebar_menu ul li a.hover
{
	background-position: 0 -30px;
}

#sidebar_menu ul li ul
{
	position: absolute;
	background-color: #282b32;
	width: 184px; /*Sub Menu Items width */
	top: 2px;
	left:16px;
	visibility: hidden;
	margin-top:-9px;
	padding: 6px 5px 10px 3px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	-webkit-box-shadow: 3px 3px 4px RGBA(0,0,0, 0.45);
	-moz-box-shadow: 3px 3px 4px RGBA(0,0,0, 0.45);
	box-shadow:3px 3px 4px RGBA(0,0,0, 0.45);
}
#sidebar_menu ul li ul a
{
	padding: 6px 0 7px 8px;
}
#sidebar_menu ul li ul li a:hover
{
	background-image: url('../img/menu_item.png');
	background-position: 0 -60px !important;
}

