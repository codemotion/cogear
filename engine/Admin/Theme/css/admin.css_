#sidebar_hider
{
	display:block;
	width: 87px;
	height:16px;
	margin-left:2px;
	background-image: url('../img/sidebar_hider.png');
}
#sidebar_hider.hidden
{
	display:block;
	width: 16px;
	height:100px;
	margin-left:0px;
	margin-top:-15px;
	background-image: url('../img/sidebar_hider.png');
	background-position: bottom left;
}
#sidebar_hider.hidden:hover
{
	margin-left:2px;
}
#sidebar_menu_hidden
{
	display:none;
}



/* CONTENT ==================================================== */

.content_wrapper
{
	float: left;
	width: 100%;
}

.content_column
{
	margin-left: 190px; /*Set left margin to #sidebar Width*/
	background: #fff;
	-webkit-border-radius: 11px;
	-moz-border-radius: 11px;
	border-radius: 11px;
	-webkit-box-shadow: 0px 0px 16px #222;
	-moz-box-shadow: 0px 0px 16px #222;
	-o-box-shadow: 0px 0px 16px #222;
	box-shadow:0px 0px 16px #222;
	min-height: 600px;
}

.content_column.wide
{
	margin-left: 21px;
}

.content_body
{
	clear:both;
	padding: 30px 20px 40px 25px;
}



/* HORIZONTAL TABBED TOP MENU ================================= */


.nav_menu
{
	list-style: none;
	margin: 0;
	padding: 0;
	float:left;
	width:100%;
	background: #eee url('../img/checkers_lite_bg.png');
	-webkit-border-top-left-radius: 11px;
	-webkit-border-top-right-radius: 11px;
	-moz-border-radius-topleft: 11px;
	-moz-border-radius-topright: 11px;
	border-top-left-radius: 11px;
	border-top-right-radius: 11px;
}

ul.nav_menu li
{
	display: block;
	margin: 0;
	padding: 0;
	float: left;
	width: auto;
}

ul.nav_menu a
{
	color: #455359;
	display: block;
	width: auto;
	font-family: tahoma, sans-serif;
	font-size:13px;
	text-decoration: none;
	background: #eff2f3 url('../img/nav_menu_item_bg.png');
	background-repeat: repeat-x;
	margin: 0;
	padding: 8px 12px;
	border-right: 1px solid #666666;
	border-left: 1px solid #fff;
	text-shadow: 1px 1px 0px RGBA(255,255,255, 0.35);
}

ul.nav_menu a:hover, ul.nav_menu a:active
{
	position: relative;
	z-index: 202;
	color:#11429c;
	background: #e4e7e8 url('../img/nav_title_bg.png');
	text-decoration:underline;
}

ul.nav_menu li.active a:link, ul.nav_menu li.active a:visited
{
	position: relative;
	z-index: 202;
	background: #e4e7e8 url('../img/nav_title_bg.png');
	color: #000;
}

ul.nav_menu li:first-child, ul.nav_menu li:first-child a
{
	-webkit-border-top-left-radius: 11px;
	-moz-border-radius-topleft: 11px;
	border-top-left-radius: 11px;
}
ul.nav_menu li:last-child, ul.nav_menu li:last-child a
{
	-webkit-border-top-right-radius: 11px;
	-moz-border-radius-topright: 11px;
	border-top-right-radius: 11px;
}

ul.nav_menu li.right
{
	float:right;
}
ul.nav_menu li.right a
{
	border-right: 0;
	border-left: 1px solid #666666;
}

.navtitle
{
	clear: both;
	position:relative;
	z-index:20;
	top:-1px;
	background: #e4e7e8 url('../img/nav_title_bg.png');
	background-repeat: repeat-x;
	background-position: bottom;
	border-top: 1px solid #8e9297;
	height: 45px;
	border-bottom: 1px solid #626467;
	-webkit-box-shadow: 0px -2px 10px RGBA(0,0,0, 0.2), 0px 4px 4px RGBA(0,0,0, 0.06);
	-moz-box-shadow: 0px -2px 10px RGBA(0,0,0, 0.2), 0px 4px 4px RGBA(0,0,0, 0.06);
	-o-box-shadow: 0px -2px 10px RGBA(0,0,0, 0.2), 0px 4px 4px RGBA(0,0,0, 0.06);
	box-shadow:0px -2px 10px RGBA(0,0,0, 0.2), 0px 4px 4px RGBA(0,0,0, 0.06);
}

.navtitle h1
{
	font-size: 19px;
	color: #28333f;
	padding: 11px 0 0 25px;
	text-shadow: 1px 1px 0px RGBA(255,255,255, 0.65);
}
